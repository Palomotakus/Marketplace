<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>EmpleadoServlet</servlet-name>
        <servlet-class>com.mycompany.frontend.servlets.EmpleadoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmpleadoServlet</servlet-name>
        <url-pattern>/Empleado</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>InventarioServlet</servlet-name>
        <servlet-class>com.mycompany.frontend.servlets.InventarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InventarioServlet</servlet-name>
        <url-pattern>/Inventario</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VentaServlet</servlet-name>
        <servlet-class>com.mycompany.frontend.servlets.VentaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VentaServlet</servlet-name>
        <url-pattern>/Venta</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.mycompany.frontend.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CatalogoServlet</servlet-name>
        <servlet-class>com.mycompany.frontend.servlets.CatalogoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CatalogoServlet</servlet-name>
        <url-pattern>/Catalogo/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
